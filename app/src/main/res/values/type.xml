<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="News.Body1" parent="TextAppearance.MaterialComponents.Body1">

        <item name="fontFamily">@font/work_sans</item>
        <item name="lineHeight">24sp</item>
        <item name="android:textColor">@color/newsPrimaryTextColor</item>
    </style>

    <style name="News.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/work_sans_bold</item>
        <item name="lineHeight">40sp</item>
        <item name="android:textColor">@color/newsPrimaryTextColor</item>

    </style>


    <style name="News.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/work_sans_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/newsSecondaryColor</item>
    </style>

    <!--Article Author-->
   <style name="News.Body2" parent="TextAppearance.MaterialComponents.Body2">
       <item name="fontFamily">@font/work_sans</item>
   </style>



    <!--Article Description-->
<style name="News.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
<item name="fontFamily">@font/work_sans_medium</item>
<item name="android:textColor">@color/newsPrimaryTextColor</item>
</style>



    <!--Title in Article Item -->
<style name="News.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
<item name="fontFamily">@font/work_sans_semibold</item>
</style>

    <!-- TextButton in Article. Styled text only, so it matches article content, but behaves like a button -->
<style name="News.TextButton" parent="Widget.MaterialComponents.Button.TextButton">

<item name="android:textColor">@color/newsSecondaryColor</item>
<item name="fontFamily">@font/work_sans</item>
<item name="android:textStyle">normal</item>
<item name="android:textSize">16sp</item>
<item name="android:textAllCaps">false</item>
<item name="android:letterSpacing">0.03125</item>
</style>



    <style name="News.Dialog.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:textColor">@color/newsBlackTextColor</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="NewsDialogBodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="fontFamily">@font/work_sans_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/newsPrimaryTextColor</item>
    </style>


    <style name="NewsToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/work_sans_semibold</item>
    </style>

</resources>




